#!groovy
@Library('common-api') _

pipeline {

    agent any 

    environment {
        GIT_REPO_URL = 'https://github.com/jinho-yoo-jack/fastcampus-ci-cd.git'
        repository = "jhy7342/cicd-study"  //docker hub id와 repository 이름
        DOCKERHUB_CREDENTIALS = credentials('docker-hub-access-key') // jenkins에 등록해 놓은 docker hub credentials 이름
        dockerImage = '' 
    }

    parameters {
        // TODO: Must modify BRANCH_NAME to TAG_NAME
        choice(name: 'BRANCH_NAME', choices: getBranchList('https://github.com/jinho-yoo-jack/fastcampus-ci-cd.git'))
    }

    stages {
        stage('git clone'){
            steps {
                sh "pwd"
                echo "git clone"
                git branch: ${env.BRANCH_NAME}, credentialsId: 'ea380414-e517-45cb-91dc-882c64c04255', url: "${GIT_REPO_URL}"
            }
        }
        stage('build'){
            steps {
                sh "pwd"
                sh './gradlew build'
            }
        }
        stage('Test') {
            steps {
                sh 'echo "docker build"'
            }
        }
        stage('dockerizing'){
            steps {
                sh 'echo "docker build"'
            }

        }
        stage('Re-Execute Application'){
            steps {
                sh 'echo "Execute"'
            }

        }
    }
}